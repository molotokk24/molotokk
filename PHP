<?php
function breadcrumbs() {
    $separator = ' > ';
    $home = '–ì–ª–∞–≤–Ω–∞—è';
    echo '<a href="/">'.$home.'</a>';
    
    if (is_category() || is_single()) {
        echo $separator;
        the_category(' ‚Ä¢ ');
        if (is_single()) {
            echo $separator;
            the_title();
        }
    } elseif (is_page()) {
        echo $separator;
        echo the_title();
    }
}
?>
<div class="breadcrumbs"><?php breadcrumbs(); ?></div>
<?php
