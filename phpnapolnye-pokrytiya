    public function renderProductPage() {
        $this->renderHTMLHeader();
        $this->renderProductHeader();
        $this->renderFeaturesSection();
        $this->renderAdvantages();
        $this->renderCompatibility();
        $this->renderTechnicalSpecs();
        $this->renderAdditionalInfo();
        $this->renderFooter();
    }
    
