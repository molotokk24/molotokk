                'installation' => ['label' => '–£–∫–ª–∞–¥–∫–∞', 'value' => '–°–∏—Å—Ç–µ–º–∞ –∑–∞–º–∫–æ–≤ –±–µ–∑ –ø—Ä–æ–ø–∏—Ç–∫–∏', 'icon' => 'üß©'],
                'area' => ['label' => '–ü–ª–æ—â–∞–¥—å –≤ —É–ø–∞–∫–æ–≤–∫–µ', 'value' => '2.22 –º¬≤', 'icon' => 'üì¶'],
